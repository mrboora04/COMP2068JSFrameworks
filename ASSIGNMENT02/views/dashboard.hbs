<h2>Your Assignments</h2>
<div class="action-links">
  <a href="/add">Add Assignment</a> | <a href="/calendar">View Calendar</a>
</div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Due Date</th>
      <th>Priority</th>
      <th>Category</th>
      <th>Progress (%)</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each assignments}}
      <tr>
        <td>{{title}}</td>
        <td>{{formatDate dueDate}}</td>
        <td>
          <span class="priority-{{priority}}">{{priority}}</span>
        </td>
        <td>{{category}}</td>
        <td>{{progress}}</td>
        <td>
          <a href="/edit/{{_id}}">Edit</a>
          <form action="/delete/{{_id}}" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure?')">
            <button type="submit" class="delete-btn">Delete</button>
          </form>
        </td>
      </tr>
    {{else}}
      <tr><td colspan="6">No assignments yet</td></tr>
    {{/each}}
  </tbody>
</table>