<h1 class="mb-4">Edit Assignment</h1>
<form method="POST" action="/edit/{{assignment._id}}">
  <div class="row g-3">
    <div class="col-md-6">
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control" id="title" name="title" value="{{assignment.title}}" required>
    </div>
    <div class="col-md-6">
      <label for="course" class="form-label">Course</label>
      <input type="text" class="form-control" id="course" name="course" value="{{assignment.course}}">
    </div>
    <div class="col-md-6">
      <label for="dueDate" class="form-label">Due Date</label>
      <input type="date" class="form-control" id="dueDate" name="dueDate" value="{{formatDate assignment.dueDate 'YYYY-MM-DD'}}" required>
    </div>
    <div class="col-md-6">
      <label for="priority" class="form-label">Priority</label>
      <select class="form-control" id="priority" name="priority">
        <option value="Low" {{#if (eq assignment.priority 'Low')}}selected{{/if}}>Low</option>
        <option value="Medium" {{#if (eq assignment.priority 'Medium')}}selected{{/if}}>Medium</option>
        <option value="High" {{#if (eq assignment.priority 'High')}}selected{{/if}}>High</option>
      </select>
    </div>
    <div class="col-md-6">
      <label for="category" class="form-label">Category</label>
      <input type="text" class="form-control" id="category" name="category" value="{{assignment.category}}">
    </div>
    <div class="col-md-6">
      <label for="weight" class="form-label">Weight (%)</label>
      <input type="number" class="form-control" id="weight" name="weight" min="0" max="100" value="{{assignment.weight}}">
    </div>
    <div class="col-12">
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="completed" name="completed" {{#if assignment.completed}}checked{{/if}}>
        <label class="form-check-label" for="completed">Completed</label>
      </div>
    </div>
    <div class="col-12">
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="notify" name="notify" {{#if assignment.notify}}checked{{/if}}>
        <label class="form-check-label" for="notify">Notify (Email Reminder)</label>
      </div>
    </div>
    <div class="col-12">
      <label for="customMessage" class="form-label">Custom Message</label>
      <textarea class="form-control" id="customMessage" name="customMessage" rows="3">{{assignment.customMessage}}</textarea>
    </div>
    <div class="col-12 mt-4">
      <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
  </div>
</form>