<h2>Edit Assignment</h2>
<form method="POST" action="/edit/{{assignment._id}}">
  <label>Title: <input type="text" name="title" value="{{assignment.title}}" required></label>
  <label>Due Date: <input type="date" name="dueDate" value="{{assignment.dueDate}}" required></label>
  <label>Priority: 
    <select name="priority">
      <option value="Low" {{#if (eq assignment.priority "Low")}}selected{{/if}}>Low</option>
      <option value="Medium" {{#if (eq assignment.priority "Medium")}}selected{{/if}}>Medium</option>
      <option value="High" {{#if (eq assignment.priority "High")}}selected{{/if}}>High</option>
    </select>
  </label>
  <label>Category: 
    <select name="category">
      <option value="Coding" {{#if (eq assignment.category "Coding")}}selected{{/if}}>Coding</option>
      <option value="Math" {{#if (eq assignment.category "Math")}}selected{{/if}}>Math</option>
      <option value="Writing" {{#if (eq assignment.category "Writing")}}selected{{/if}}>Writing</option>
      <option value="Other" {{#if (eq assignment.category "Other")}}selected{{/if}}>Other</option>
    </select>
  </label>
  <label>Progress (%): <input type="number" name="progress" min="0" max="100" value="{{assignment.progress}}"></label>
  <button type="submit">Save</button>
</form>